#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main(void)
{
    char *args[] = {"ls", "-l", "/usr", NULL};
    pid_t child_pid;

    child_pid = fork();
    if (child_pid == -1)
    {
        perror("Error: fork");
        exit(1);
    }
    if (child_pid == 0)
    {
        /* Child process */
        if (execve("/bin/ls", args, NULL) == -1)
        {
            perror("Error: execve");
            exit(1);
        }
    }
    else
    {
        /* Parent process */
        wait(NULL);
        printf("Child completed\n");
        exit(0);
    }
}

